<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mk_product_pricelist_item_advanced_bol_tree_view" model="ir.ui.view">
        <field name="name">product.pricelist.item.advanced.bol.list</field>
        <field name="model">product.pricelist.item</field>
        <field name="priority">1100</field>
        <field name="arch" type="xml">
            <list string="Pricelist Items">
                <field name="product_tmpl_id" string="Products" readonly="1"/>
                <field name="product_id" string="Variants" groups="product.group_product_variant" readonly="1"/>
                <field name="min_quantity" colspan="4"/>
                <field name="price" string="Price"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="currency_id" invisible="1"/>
                <field name="pricelist_id" invisible="1"/>
                <field name="company_id" invisible="1"/>
            </list>
        </field>
    </record>
</odoo>
